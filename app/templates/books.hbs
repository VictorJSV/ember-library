<h2>Books</h2>

<div class="row">
  <div class="col-md-6">
    <div class="list-group">
      {{#each model as |book|}}
        {{#unless book.isNew}}
          {{#link-to "books.book" book class="list-group-item"}} {{book.title}} {{/link-to}}
        {{/unless}}
      {{/each}}
    </div>

    {{#link-to "books.new" class="btn btn-primary"}} Add new book {{/link-to}}
  </div>
  <div class="col-md-6">
    {{outlet}}
  </div>
</div>

