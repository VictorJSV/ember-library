<div class="row">
  <div class="col-md-6">
    <img src="{{book.image}}" alt="{{book.title}}" class="img-thumbnail">
  </div>
  <div class="col-md-6">
    <form {{action "submit"}}>
      <div class="form-group">
        <label for="title">Title</label>
        {{input class="form-control" value=book.title}}
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        {{input class="form-control" value=book.author}}
      </div>
      <div class="form-group">
        <label for="urlImage">Url Image</label>
        {{input class="form-control" value=book.image}}
      </div>
      <button type="submit" class="btn btn-primary">{{typeTextButton}}</button>
    </form>
  </div>
</div>
{{yield}}
